// ganpati-quiz-app/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model Question {
  id            String   @id @default(cuid())
  questionText  String
  options       String[]
  correctAnswer String
  points        Int      @default(10)
  createdAt     DateTime @default(now())
}

model Participant {
  id        String   @id @default(cuid())
  name      String   @unique
  score     Int      @default(0)
  createdAt DateTime @default(now())
}

model QuizState {
  id                String   @id @default(cuid())
  currentQuestionId String?
  questionStartTime DateTime?
  answerReceived    Boolean  @default(false)
  quizEnded         Boolean  @default(false)
  quizStarted       Boolean  @default(false) // New: Tracks if the quiz has been started by the admin
}